<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vjrene.cs.appdocknativev.DeveloperActivityFragment"
    tools:showIn="@layout/activity_developer"
    android:weightSum="1">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:onClick="goHome"/>

        <ImageView
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:id="@+id/imageView"
            android:src="@drawable/beye"
            android:layout_marginStart="70dp"
            android:layout_below="@+id/home"
            android:layout_toEndOf="@+id/imageView2" />

        <ImageView
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_crossdakar"
            android:layout_below="@+id/home"
            android:layout_toEndOf="@+id/home"
            android:layout_marginStart="64dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/beyeBioText"
            android:id="@+id/BeyeBio"
            android:layout_below="@+id/imageView"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:id="@+id/eduButton"
            android:layout_below="@+id/BeyeBio"
            android:layout_toStartOf="@+id/imageView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get App"
            android:id="@+id/getApp"
            android:layout_below="@+id/BeyeBio"
            android:onClick="goToStore"
            android:layout_alignEnd="@+id/imageView" />

    </RelativeLayout>

    </ScrollView>
</LinearLayout>
